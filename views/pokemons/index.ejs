<%- include('header') -%>

<div class="container-fluid">
  <div class="page-header">
    <h1>Pokédex <small class="pull-right">Showing <span class="badge"><%= pokemons.length %></span> Pokémons</small></h1>
  </div>
  <% pokemons.forEach(function(pokemon){ %>
  <div class="" ng-repeat="group in groupped">
    <div class="col-md-4" ng-repeat="pokemon in group">
      <div class="pokemon panel panel-primary">
        <div class="panel-heading">
          <%= pokemon.name %>
          <%= pokemon.species %></li>
        </div>
        <div class="panel-body">
          <a href="<%= pokemon._id %>"><img class="img-responsive"src="images/<%= pokemon.name %>.jpg" alt=""></a>
        </div>
        <div class="panel-footer">
          <div class="text-center">
            <button class="btn btn-primary" type="button">
              <%= pokemon.type %>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%}) %>

  <%- include('footer') -%>


